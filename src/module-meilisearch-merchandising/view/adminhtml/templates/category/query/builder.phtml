<form id="category-merchandising-form" action="<?= $block->getPostUrl() ?>" method="post">
    <input type="submit" name="Save"/>
    <input type="hidden" id="category_id" name="category_id"/>
    <div id="query-builder"></div>
</form>
<div id="modal">
    <div class="modal-body-content">
        content
    </div>
</div>

<script>
    requirejs([
        'jquery',
        'queryBuilder',
        'Magento_Ui/js/modal/modal',
        'prototype'
    ], function($, queryBuilder, modal) {
        let options = {
            type: 'slide',
            responsive: true,
            title: 'Main title',
            buttons: [{
                text: $.mage.__('Ok'),
                class: '',
                click: function () {
                    this.closeModal();
                }
            }],
            opened: function() {
                new Ajax.Request('meilisearch_merchandising/category/merch_chooser/', {
                    evalScripts: true,
                    parameters: {
                        'form_key': FORM_KEY
                    },
                    onSuccess: function(t) {
                        $('.modal-body-content').html(t.responseText);
                    }.bind(this)
                });
            }
        };

        modal(options, $('#modal'));

        $('#query-builder').on('afterUpdateRuleFilter.queryBuilder', function(e, rule) {
            if (rule.filter.id === 'sku') {
                let input = $(rule.$el).find('.rule-value-container input');
                let button = $('<button>').text('Mon Bouton').addClass('btn btn-primary');

                input.after(button);

                button.on('click', function() {
                    $('#modal').modal('openModal');
                });
            }
        });
        $('#query-builder').queryBuilder({
            filters: <?= $this->getFilters() ?>
        });

        $('#category-merchandising-form').submit(function(e) {
            e.preventDefault();
            let rules = $('#query-builder').queryBuilder('getRules');
            let categoryId = $('#category_id').val();
            if (rules) {
                $.ajax(this.action, {
                    data: {
                        form_key: window.FORM_KEY,
                        rules: rules,
                        category_id: categoryId
                    },
                    showLoader: true,
                    dataType: 'json'
                });
            }
        });
    });
</script>
